{
  "name": "brainy-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest run --exclude '**/e2e/**'",
    "test:watch": "vitest --exclude '**/e2e/**'",
    "e2e": "npm run build && xvfb-run -a npx playwright test",
    "e2e:headed": "npm run build && npx playwright test --headed"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/better-sqlite3": "^7.6.13",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.74",
    "electron": "^38.0.0"
  }
}
