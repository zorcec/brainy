{
  "name": "brainy-vscode-extension",
  "displayName": "Brainy Knowledge Assistant",
  "description": "VS Code extension for Brainy knowledge assistant",
  "version": "0.0.1",
  "publisher": "brainy",
  "main": "dist/extension.js",
  "browser": "dist/extension.js",
  "types": "dist/extension.d.ts",
  "scripts": {
  "build": "npm run check-types && esbuild src/extension.ts --bundle --platform=node --format=cjs --external:vscode --outfile=dist/extension.js --sourcemap",
    "check-types": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "esbuild": "^0.19.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "languageModelTools": [
      {
        "name": "file",
        "displayName": "File Operations",
        "modelDescription": "Read, write and delete files.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "action": {
              "type": "string",
              "description": "Action to perform (read|write|delete)"
            },
            "path": {
              "type": "string",
              "description": "File path (relative or absolute)"
            },
            "content": {
              "type": "string",
              "description": "File content (required for write action)"
            }
          },
          "required": ["action", "path"]
        }
      }
    ],
    "commands": [
      {
        "command": "brainy.configure",
        "title": "Brainy: Configure Workspace"
      },
      {
        "command": "brainy.runCurrentPlaybook",
        "title": "Brainy: Run Current Playbook"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "annotation",
        "superType": "keyword",
        "description": "Brainy playbook annotation"
      },
      {
        "id": "flag",
        "superType": "parameter",
        "description": "Annotation flag"
      },
      {
        "id": "error",
        "superType": "regexp",
        "description": "Parser error"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "annotation": [
            "keyword.control.brainy",
            "entity.name.tag.brainy"
          ],
          "flag": [
            "variable.parameter.brainy",
            "entity.other.attribute-name.brainy"
          ],
          "error": [
            "invalid.illegal.brainy",
            "markup.error.brainy"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "[*]": {
          "enabled": true,
          "rules": {
            "annotation": {
              "foreground": "#8607f4",
              "fontStyle": "bold"
            },
            "flag": {
              "foreground": "#9CDCFE"
            },
            "error": {
              "foreground": "#F48771",
              "fontStyle": "underline"
            }
          }
        }
      }
    }
  }
}

